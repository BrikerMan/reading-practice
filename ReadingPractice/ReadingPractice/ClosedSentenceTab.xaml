<UserControl x:Class="ReadingPractice.ClosedSentenceTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rp="clr-namespace:ReadingPractice"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="SentenceListViewer">
        <Grid HorizontalAlignment="Stretch">
            <sdk:Label HorizontalAlignment="Left">Search</sdk:Label>
            <TextBox Name="SearchClosedSentences" HorizontalAlignment="Stretch" Margin="45,0,0,0"
                TextChanged="SearchClosedSentences_TextChanged"></TextBox>
        </Grid>
    </StackPanel>
</UserControl>

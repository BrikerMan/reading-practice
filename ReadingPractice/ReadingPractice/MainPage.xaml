                            <sdk:TreeViewItem Header="Chapter 2">
                                <CheckBox Content="Vocab 1"></CheckBox>
                                <CheckBox Content="Vocab 2"></CheckBox>
                            </sdk:TreeViewItem>
                            <sdk:TreeViewItem Header="Chapter 3">
                                <CheckBox Content="Vocab 1"></CheckBox>
                                <CheckBox Content="Vocab 2"></CheckBox>
                            </sdk:TreeViewItem>
                        </sdk:TreeViewItem>
                        </sdk:TreeViewItem>
                </sdk:TreeView>

            </ScrollViewer>

        </StackPanel>
        <Grid x:Name="LayoutRoot" Background="White" Height="685" Width="503">
        <sdk:TabControl Height="577" HorizontalAlignment="Left" Margin="0,80,0,0" Name="tabControl1" VerticalAlignment="Top" Width="503">
            <sdk:TabItem Header="Read Sentences" Name="readTab">
                <Grid>
                        <ScrollViewer Height="531" HorizontalAlignment="Left" Margin="12,9,0,0" VerticalAlignment="Top" Width="476" VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical" Name="SentenceListViewer">
                                <Button Name="FetchNextSentenceButton" Click="FetchNextSentenceButton_Click">Fetch next sentence</Button>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
            </sdk:TabItem>
            <sdk:TabItem Header="Contribute Sentences" Name="contributeTab">
                
            </sdk:TabItem>

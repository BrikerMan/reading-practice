<UserControl x:Class="ReadingPractice.LeftSidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" d:DesignHeight="600" d:DesignWidth="400">
    <StackPanel Orientation="Vertical" Width="400" Height="600">
        <sdk:Label Content="study focus:" HorizontalAlignment="Center" FontSize="16"></sdk:Label>
        <sdk:Label Name="StudyFocusForeignWord"  Content="someforeignword" HorizontalAlignment="Center" FontSize="30"></sdk:Label>
        <sdk:Label Name="StudyFocusReading"  Content="somereading" HorizontalAlignment="Center" FontSize="16"></sdk:Label>
        <sdk:Label Name="StudyFocusTranslation"  Content="to eat" HorizontalAlignment="Center" FontSize="16"></sdk:Label>
        <Button Content="return to general review" Margin="50,0,50,30"></Button>
        <StackPanel Orientation="Horizontal" Width="400"  Name="searchContainer">
            <sdk:Label Content="Search:" Margin="10,0,0,0"  Height="28" Name="label3" />
            <TextBox HorizontalAlignment="Stretch" Width="333">
            </TextBox>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
            <sdk:TreeView>
                <sdk:TreeViewItem Name="AllVocabList"  Header="All Vocab" IsExpanded="False">
                    <CheckBox Content="Vocab 1"></CheckBox>
                    <CheckBox Content="Vocab 2"></CheckBox>
                    <CheckBox Content="Vocab 3"></CheckBox>
                </sdk:TreeViewItem>
                <sdk:TreeViewItem Header="Textbook Vocab" IsExpanded="True">
                    <sdk:TreeViewItem Header="Textbook 1">
                        <sdk:TreeViewItem Header="Chapter 1">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                        <sdk:TreeViewItem Header="Chapter 2">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                        <sdk:TreeViewItem Header="Chapter 3">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                    </sdk:TreeViewItem>
                    <sdk:TreeViewItem Header="Textbook 2">
                        <sdk:TreeViewItem Header="Chapter 1">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                        <sdk:TreeViewItem Header="Chapter 2">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                        <sdk:TreeViewItem Header="Chapter 3">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                    </sdk:TreeViewItem>
                    <sdk:TreeViewItem Header="Textbook 3">
                        <sdk:TreeViewItem Header="Chapter 1">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                        <sdk:TreeViewItem Header="Chapter 2">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                        <sdk:TreeViewItem Header="Chapter 3">
                            <CheckBox Content="Vocab 1"></CheckBox>
                            <CheckBox Content="Vocab 2"></CheckBox>
                        </sdk:TreeViewItem>
                    </sdk:TreeViewItem>
                </sdk:TreeViewItem>
            </sdk:TreeView>

        </ScrollViewer>

    </StackPanel>
</UserControl>
